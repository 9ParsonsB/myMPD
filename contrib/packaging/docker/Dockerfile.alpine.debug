FROM alpine:latest
COPY . /myMPD/
WORKDIR /myMPD
RUN ./build.sh installdeps
RUN ./build.sh debug
RUN ./build.sh adduser

ENV MPD_HOST=127.0.0.1
ENV MPD_PORT=6600
ENTRYPOINT ["/myMPD/debug/mympd"]
